@{ ViewData["Title"] = "Icons"; }
@model AddPhoneNumberViewModel
<div class="row justify-content-center">
    <div class="col">
        <div class="card">
            <div class="card-header bg-transparent">
                <h3 class="mb-0">Add Numbers</h3>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                    {
                @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <span>@error.ErrorMessage</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>}}
                    <div class="form-group mb-3">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-mobile-button"></i>
                                </span>
                            </div>
                            <input asp-for="number1" class="form-control" placeholder="Whatsapp Number" type="number" />
                        </div>
                        <span asp-validation-for="number1" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-mobile-button"></i>
                                </span>
                            </div>
                            <input asp-for="number2" placeholder="Whatsapp Number" type="number" class="form-control" />
                        </div>
                        <span asp-validation-for="number2" class="invalid-feedback" style="display: block"></span>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary my-4" type="submit">Add/Update Numbers</button>
                    </div>
                    <div class="form-group" style="width:90%; margin:0 auto;">
                        <table id="cnDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Mobile Number 1</th>
                                    <th>Mobile Number 2</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Breadcrumbs
{
    <div class="col-lg-6 col-7">
        <h6 class="h2 text-white d-inline-block mb-0">Add Mobile Numbers</h6>
        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item">
                    <a href="#">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                @*<li class="breadcrumb-item">
                        <a href="#">Components</a>
                    </li>*@
                <li class="breadcrumb-item active" aria-current="page">Add Numbers</li>
            </ol>
        </nav>
    </div>
}
