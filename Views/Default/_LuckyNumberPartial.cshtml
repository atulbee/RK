@model LuckyNumberPartialViewModel
<!--Today Lucky Number Row-->
<div class="container box-border pad-left-rig-0 lucky-numbers">
    <h3 class="lucky-h3">Today Lucky Number</h3>
    <!--Open Close Row-->
    <div class="fullwidth">
        <div class="col-md-6">
            @{
                var types = "";
                var numbers = "";
                foreach (var item in Model.tblLuckyNumbers)
                {

                    if (item.LuckyNumberType == "Open")
                    {
                        types = item.LuckyNumberType;
                        numbers = numbers + ", " + item.LuckyNumber.ToString();
                    }

                }

                @if (Model.tblLuckyNumbers.Count() > 0 && !string.IsNullOrEmpty(numbers))
                {
                    <h4>@types</h4>
                    <p>@numbers.Substring(1) </p>
                }

            }
        </div>
        <div class="col-md-6 border-left">
            @{
                types = "";
                numbers = "";
                foreach (var item in Model.tblLuckyNumbers)
                {

                    if (item.LuckyNumberType == "Close")
